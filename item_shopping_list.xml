<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutShopping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvIdShop"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="7dp"
                android:paddingBottom="5dp"
                android:text="id"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/tvShopAddItem"
                app:layout_constraintTop_toTopOf="@+id/imgDeleteShop"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/tvShopAddItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="Notes"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <ImageView
                android:id="@+id/imgDeleteShop"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:contentDescription="@string/delete"
                android:focusable="true"
                android:importantForAccessibility="auto"
                android:src="@drawable/baseline_check_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>